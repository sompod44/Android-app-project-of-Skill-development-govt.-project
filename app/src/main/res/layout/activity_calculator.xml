<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".Calculator">
<LinearLayout
    android:layout_weight="2"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="#61ffe604"
    >
    <TextView
        android:layout_weight="2"
        android:id="@+id/textviewID1"
        android:layout_gravity="center"
        android:gravity="end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#61ffe604"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textAlignment="viewEnd"
        />
</LinearLayout>


    <LinearLayout
        android:layout_weight="6"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                >

                <Button
                    android:id="@+id/b7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="7" />

                <Button
                    android:id="@+id/b8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="8" />

                <Button
                    android:id="@+id/b9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="9" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/del"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#ffe222"
                    android:onClick="deleteclear"
                    android:text="Del" />

                <Button
                    android:id="@+id/cle"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#ff5222"
                    android:onClick="deleteclear"
                    android:text="cle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:weightSum="3"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="4" />

                <Button
                    android:id="@+id/b5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="5" />

                <Button
                    android:id="@+id/b6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="6" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bmul"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#5ba725"
                    android:onClick="oparetorbutton"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="x" />

                <Button
                    android:id="@+id/bdev"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#5ba725"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="oparetorbutton"
                    android:text="/" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:layout_marginRight="8dp"
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="1" />

                <Button
                    android:id="@+id/b2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="2" />

                <Button
                    android:id="@+id/b3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="3" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bplus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#5ba725"
                    android:onClick="oparetorbutton"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="+" />

                <Button
                    android:id="@+id/bminus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#5ba725"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="oparetorbutton"
                    android:text="-" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bzero"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="numberbutton"
                    android:text="0" />

                <Button
                    android:id="@+id/bdot"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e49bc3"
                    android:onClick="numberbutton"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="." />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bequal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#6586ff"
                    android:onClick="oparetorbutton"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="=" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                >

                <Button
                    android:id="@+id/firstbracket"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#faad6a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:onClick="otherbutton"
                    android:text="(" />

                <Button
                    android:id="@+id/secondbraket"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#faad6a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:onClick="otherbutton"
                    android:text=")" />

                <Button
                    android:id="@+id/bpower"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#50ff64"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="otherbutton"
                    android:text="^" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bmod"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ad69e1"
                    android:onClick="otherbutton"
                    android:text="mod" />

                <Button
                    android:id="@+id/bpersent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ff5484"
                    android:onClick="otherbutton"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="%" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_weight="3.5"
                android:weightSum="3"
                android:layout_width="0dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bsin"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#7b3c3c"
                    android:textColor="#ffffff"
                    android:onClick="otherbutton"
                    android:text="sin" />

                <Button
                    android:id="@+id/bcos"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#7b3c3c"
                    android:textColor="#ffffff"
                    android:onClick="otherbutton"
                    android:text="cos" />

                <Button
                    android:id="@+id/btan"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#7b3c3c"
                    android:onClick="otherbutton"
                    android:textColor="#ffffff"
                    android:text="tan" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.5"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bcot"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#7b3c3c"
                    android:textColor="#ffffff"
                    android:onClick="otherbutton"
                    android:text="cot" />

                <Button
                    android:id="@+id/bsqrt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#db5f29"
                    android:onClick="otherbutton"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="sqrt"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout> <!-- this finishing tag of 2nd Linearlayout  -->

</LinearLayout> <!-- this finishing tag of 1st Linearlayout  -->